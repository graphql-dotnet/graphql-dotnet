<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <Description>GraphQL memory cache implementation on top of Microsoft.Extensions.Caching.Memory</Description>
    <PackageTags>GraphQL;memory</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\GraphQL\GraphQL.csproj" PackageVersion="[$(Version),$(NextVersion))" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="8.0.0" Condition="'$(TargetFramework)' == 'net6.0'" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="3.1.32" Condition="'$(TargetFramework)' != 'net6.0'" />
  </ItemGroup>

</Project>
